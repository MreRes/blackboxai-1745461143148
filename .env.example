# Application
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# MongoDB
DB_URI=mongodb://localhost:27017/financial-bot
DB_NAME=financial-bot

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=24h
JWT_COOKIE_EXPIRE=30

# WhatsApp Bot
ENABLE_WHATSAPP=true
WHATSAPP_VERIFY_TOKEN=your_whatsapp_verify_token
BOT_SESSION_PATH=./whatsapp-bot/session.json
WHATSAPP_WEBHOOK_URL=https://your-domain.com/api/whatsapp/webhook

# Admin Settings
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password
ADMIN_EMAIL=admin@example.com
HASH_ROUNDS=10

# Backup Settings
BACKUP_PATH=./backups
BACKUP_INTERVAL=24h # Format: 1h, 1d, 7d, etc.
BACKUP_RETENTION_DAYS=7
RESTORE_CONFIRMATION_CODE=your_restore_code_here

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX=100 # requests per window

# NLP Settings
NLP_MODEL_PATH=./nlp-model.json
NLP_LANGUAGE=id
NLP_THRESHOLD=0.7

# Activation Settings
DEFAULT_ACTIVATION_DURATION=7d # Format: 7d, 1m, 1y
DEFAULT_PHONE_NUMBER_LIMIT=1
ACTIVATION_CODE_LENGTH=8

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# File Upload
MAX_FILE_SIZE=50 # MB
MAX_FILES=5

# Notifications
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
NOTIFICATION_EMAIL=notifications@example.com

# Third Party Services (if needed)
# SENTRY_DSN=your_sentry_dsn
# CLOUDINARY_URL=your_cloudinary_url
# REDIS_URL=your_redis_url

# Development Tools
ENABLE_SWAGGER=true
ENABLE_MORGAN=true

# Testing
TEST_DB_URI=mongodb://localhost:27017/financial-bot-test
TEST_JWT_SECRET=test_jwt_secret
TEST_USER_PASSWORD=test_password

# Feature Flags
ENABLE_BACKUP_RESTORE=true
ENABLE_ADMIN_DASHBOARD=true
ENABLE_USER_REGISTRATION=true
ENABLE_AUTO_BACKUP=true
ENABLE_RATE_LIMITING=true

# Paths
UPLOAD_PATH=./uploads
TEMP_PATH=./temp
LOG_PATH=./logs

# Timeouts
DB_TIMEOUT=5000
REQUEST_TIMEOUT=30000
WHATSAPP_TIMEOUT=60000

# Cache
CACHE_TTL=3600 # seconds
MAX_CACHE_SIZE=100 # MB

# API Versioning
API_VERSION=v1
ENABLE_LEGACY_ENDPOINTS=false

# Debug
DEBUG_ENABLED=true
DEBUG_LEVEL=verbose
STACK_TRACE_LIMIT=10

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

